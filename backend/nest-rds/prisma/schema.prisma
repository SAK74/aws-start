generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cart {
  user_id    String      @unique
  created_at DateTime    @default(now())
  updated_at DateTime    @updatedAt
  status     Cart_Status @default(OPEN)
  items      Cart_Item[]
  order      Order[]
  User       User        @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@id([user_id])
}

enum Cart_Status {
  OPEN
  ORDERED
}

model Cart_Item {
  cart_id    String
  count      Int
  cart       Cart    @relation(fields: [cart_id], references: [user_id])
  product    Product @relation(fields: [product_id], references: [id])
  product_id String  @unique @db.Uuid

  @@id([product_id])
}

model Product {
  id          String       @id @db.Uuid
  title       String
  description String
  price       Int
  Cart_Item   Cart_Item?
  Order_Item  Order_Item[]
}

model Order {
  userId   String
  cartId   String
  cart     Cart         @relation(fields: [cartId], references: [user_id])
  items    Order_Item[]
  payment  Json
  delivery Json
  total    Int
  User     User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  history HistoryStamp[]

  id String @id @default(uuid()) @db.Uuid
}

model Order_Item {
  id        String   @id @default(uuid()) @db.Uuid
  order_Id  String   @db.Uuid
  order     Order    @relation(fields: [order_Id], references: [id], onDelete: Cascade)
  Product   Product? @relation(fields: [productId], references: [id])
  productId String?  @db.Uuid
  count     Int
}

model HistoryStamp {
  status    Order_Status @default(OPEN)
  timestamp DateTime     @updatedAt
  comment   String       @db.Text
  order_id  String       @db.Uuid
  Order     Order        @relation(fields: [order_id], references: [id], onDelete: Cascade)

  id String @id @default(uuid()) @db.Uuid
}

enum Order_Status {
  OPEN
  APPROVED
  CONFIRMED
  SENT
  COMPLETED
  CANCELLED
}

model User {
  id       String  @id @unique
  name     String  @unique
  email    String? @unique
  password String  @unique
  cart     Cart?
  order    Order[]
}
